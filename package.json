{
  "name": "use-visibility-change",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.5.0",
  "description": "Know how long it's been since a user has \"seen\" your app.",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Donavon West <github@donavon.com>",
  "module": "dist/use-visibility-change.esm.js",
  "size-limit": [
    {
      "path": "dist/use-visibility-change.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-visibility-change.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^3.9.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 75,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "@use-it/event-listener": "^0.1.7"
  }
}
